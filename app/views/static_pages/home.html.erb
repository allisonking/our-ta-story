<!DOCTYPE HTML>

<!-- Banner -->
<section id="banner">
	<% if @featured %>
		<div class="content">
      <header>
        <h1><%= @featured.name %></h1> <br>
      </header>
      <p>
				<%= truncate(@featured.body, length: 300) %>
			</p>
      <ul class="actions">
        <li><%= link_to "More", @featured, class: "button" %></li>
      </ul>
    </div>

			<% if @featured.media_type == "Video" %>
			<!--<%=link_to image_tag("http://img.youtube.com/vi/"+@featured.youtube_id+"/0.jpg"), @featured %>-->
			<div class="story-video">
				<iframe width="560" height="315"
				src="https://www.youtube.com/embed/<%= @featured.youtube_id%>"  frameborder="0" allowfullscreen>
			</iframe>
		</div>
			<% else %>
			<span class="image object">
			<%= image_tag(@featured.thumbnail.url) %>
			</span>
			<% end %>

	<% else %>
		<div class="content">
			<header>
        <h1>Come back later!</h1> <br>
      </header>
      <p>
				Thanks for visiting- it seems like something isn't quite right. Please
				visit again later!
			</p>
		</div>
	<% end %>
</section>

<!-- Section -->
<div class="button-center-wrapper">
  <%= link_to "Submit Your Story", new_story_path, class: "button submit-story" %>
</div>
<h2>Stories</h2>
<%= render "stories/stories_index" %>
