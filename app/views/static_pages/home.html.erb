<!DOCTYPE HTML>

<!-- Banner -->
<section id="banner">
	<% if @featured %>
		<div class="content">
      <header>
        <h1><%= @featured.name %></h1> <br>
      </header>
      <p>
				<%= truncate(@featured.body, length: 300) %>
			</p>
      <ul class="actions">
        <li><%= link_to "More", @featured, class: "button" %></li>
      </ul>
    </div>
		<span class="image object">
			<%= image_tag(@featured.thumbnail.url) %>
		</span>
	<% else %>
		<div class="content">
			<header>
        <h1>Come back later!</h1> <br>
      </header>
      <p>
				Thanks for visiting- it seems like something isn't quite right. Please
				visit again later!
			</p>
		</div>
	<% end %>
</section>

<!-- Section -->
<div class="button-center-wrapper">
  <%= link_to "Submit Your Story", new_story_path, class: "button submit-story" %>
</div>
<h2>Stories</h2>
<%= render "stories/stories_index" %>
