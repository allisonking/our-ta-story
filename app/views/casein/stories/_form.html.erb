<!-- Scaffolding generated by Casein v5.2.0.0 -->

<div class = "row">
  <div class = "col-sm-2">
    <%= casein_number_field f, f.object, :rank%>
  </div>
  <div class="col-lg-6">
    <%= casein_text_field f, f.object, :name, :casein_label => "Title of Story" %>
  </div>
  <div class="col-sm-2">
    <%= casein_check_box f, f.object, :is_published %>
  </div>
  <div class="col-sm-2">
    <%= casein_check_box f, f.object, :is_featured %>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <%= casein_text_field f, f.object, :author_name %>
  </div>
  <div class="col-lg-4">
    <%= casein_text_field f, f.object, :subject_of_story %>
  </div>
  <div class="col-lg-4">
    <%= casein_email_field f, f.object, :email, :casein_label => "Contact email" %>
  </div>
</div>

<div class="row">

  <div class="col-lg-2">
    <%= casein_number_field f, f.object, :birth_year %>
  </div>
  <div class="col-lg-6">
    <%= casein_text_field f, f.object, :hometown %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= casein_text_area_big f, f.object, :body %>
  </div>
</div>

<div class="row">
  <%= f.label :tag_list, "Tags" %>
  <%= @story.tag_list %>
  <!--TODO edit tags list for story-->
</div>

<% if f.object.media_type == "video" %>
<div class="row">
  <div class="col-sm-6">
    <%= casein_text_field f, f.object, :video_link %>
    <div class="story-video">
      <iframe width="560" height="315"
        src="https://www.youtube.com/embed/<%= YouTubeAddy.extract_video_id(f.object.video_link)%>"  frameborder="0" allowfullscreen>
      </iframe>
    </div>
  </div>
</div>
<% else %>
<div class="row">
  <div class="col-sm-4">
    <!--<%= casein_file_field f, f.object, "test_thumbnail", :thumbnail %>-->
    <label>Image</label>
    <%=image_tag(f.object.thumbnail.url || default_url, :class => "story-image") %>
  </div>
</div>
<% end %>

