<!-- Scaffolding generated by Casein v5.2.0.0 -->

<div class = "row">
  <div class = "col-sm-2">
    <%= casein_number_field f, f.object, :rank%>
  </div>
  <div class="col-sm-2">
    <%= casein_check_box f, f.object, :is_published %>
  </div>
  <div class="col-sm-2">
    <%= casein_check_box f, f.object, :is_featured %>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <%= casein_text_field f, f.object, :name %>
  </div>
</div>
<div class="row"
  <div class="col-lg-12">
    <%= casein_text_area_big f, f.object, :body %>
  </div>
</div>



<% if f.object.media_type == "Video" %>
<div class="row">
  <!--<div class="col-sm-2">
    <%= casein_select f, f.object, :media_type, ["Video", "Audio", "Text"] %>
    <%= f.object.media_type %>
  </div> -->
  <div class="col-sm-6">
    <%= casein_text_field f, f.object, :video_link %>
    <div class="story-video">
      <iframe width="560" height="315"
        src="https://www.youtube.com/embed/<%= YouTubeAddy.extract_video_id(f.object.video_link)%>"  frameborder="0" allowfullscreen>
      </iframe>
    </div>
  </div>
</div>
<% else %>
<div class="row">
  <div class="col-sm-4">
    <%= casein_file_field f, f.object, "test_thumbnail", :thumbnail %>
    <%=image_tag(f.object.thumbnail.url || default_url, :class => "story-image") %>
  </div>
  </div>
<% end %>

