<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= casein_sort_link "Name", :name %></th>
      <th><%= casein_sort_link "Body", :body %></th>
      <th><%= casein_sort_link "Published?", :is_published %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <% stories.each do |story| %>
    <tr>
      <td><%= casein_table_cell_link story.name, casein_story_path(story) %></td>
      <td><%= casein_table_cell_link story.body, casein_story_path(story) %></td>
      <td><%= casein_table_cell_link casein_yes_no_label(story.is_published), casein_story_path(story) %></td>
      <td class="delete">
        <%= link_to(casein_show_row_icon("trash"), casein_story_path(story), method: :delete, data: { confirm: "Are you sure you want to delete this story?" }) %>
      </td>
    </tr>
  <% end %>
</table>
