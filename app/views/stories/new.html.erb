<%= render 'layouts/nav' %>
<div class="submit-wrapper">
  <section class="header">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-paper-plane  text-primary sr-icons"></i>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 text-center">
          <hr class="primary">
          <h2 class="section-heading">Submit a Story</h2>
          <hr class="primary">
        </div>
      </div>

    </div>

  </section>

<div class="text">
<%= bootstrap_form_for(@story) do |f| %>

<%= f.select :media_type, options_for_select([["Select One", ""], "Video", "Audio", "Text"]), { class: "col-lg-4" }%>

    <%= f.text_field :name, label: "Title" %>
    <%= f.text_area :body, rows: "10", label: "Body" %>

    <%= f.file_field :thumbnail, label: "Upload a picture: "%>

    <%= f.text_field :video_link, label: "Link to your video:"%>
    <br>
    <div class="text-center">
      <%= f.submit "Submit My Story", class:"btn btn-primary sr-button" %>
    </div>
<% end %>
</div>
</div>
