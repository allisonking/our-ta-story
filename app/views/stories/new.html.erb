<h1>Submit a Story</h1>

<%= form_for(@story) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: "10" %>
    <%= f.label "Upload a picture:" %>
    <%= f.file_field :thumbnail %>
    <br>
    <div class="button-center-wrapper">
      <%= f.submit "Submit My Story" %>
    </div>
<% end %>
