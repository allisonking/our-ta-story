

    <div class="row">
      <% @stories.each do |story| %>
      <div class="text-center" id="story-select-wrapper">
        <div class="service-box">
          <% if story.media_type == "video" %>
          <div class="story-index-wrapper">
            <div class="icon-container">
              <i class="fa fa-3x fa-video-camera media-indicator"> </i>
            </div>
            <%=link_to image_tag("https://img.youtube.com/vi/"+story.youtube_id+"/hqdefault.jpg", class:"img-responsive"), story  %>
          </div>
          <% else %>
          <div class="story-index-wrapper">
            <div class="icon-container">
              <i class="fa fa-3x fa-file-text-o media-indicator"> </i>
            </div>
          <%=link_to image_tag(story.thumbnail.url || default_url, class:"img-responsive"), story %>
        </div>
          <% end %>

          <h3><%= story.name %></h3>
          <p><%= truncate(story.body, length: 300) %></p>

          <br>
          <div class="text-center">
            <%= link_to "More", story, class: "btn btn-primary sr-button align-botomm" %>
          </div>
        </div>
        <%= raw story.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
      </div>
      <% end %>
    </div>
